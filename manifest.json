{
    "manifest_version": 2,

    "name": "Gitsembla",
    "description": "Get notified on git stuff without annoying email spam.",
    "version": "1.1",
    "permissions": [
        "storage",
        "https://api.assembla.com/"
    ],

    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "index.html"
    }
}
